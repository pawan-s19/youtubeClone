                                            <% }else{ %>
                                            <i class="ri-more-2-fill plMenu" data-bs-toggle="dropdown" data-bs-auto-close="outside" aria-expanded="false"></i>
                                        <% } %>
                                        
                                        <ul class="dropdown-menu">
                                          <li><a class="dropdown-item d-flex align-items-end gap-2" data-bs-toggle="collapse" href="#PlNameCollapse" role="button" aria-expanded="false" aria-controls="PlNameCollapse"><i class="ri-pencil-fill"></i> Modify Name</a></li>
                                          <div class="collapse" id="PlNameCollapse">
                                              <div class="card card-body">
                                                <form method="POST" action="/update/name/playlist/<%=elem._id%>">
