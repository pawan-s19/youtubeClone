                                          <% if(elem.isPrivate){ %>
                                            <li><a class="dropdown-item d-flex align-items-end gap-2" href="/change/visibility/playlist/<%=elem._id%>"><i class="ri-lock-unlock-fill"></i> Change to Public</a></li>
                                            <% }else{ %>
                                                <li><a class="dropdown-item d-flex align-items-end gap-2" href="/change/visibility/playlist/<%=elem._id%>"><i class="ri-lock-2-fill"></i> Change to Private</a></li>
                                        <% } %>
                                        </ul>
                                    </div>
                                <% } %>
                            </div>
                            <% }) %>
                    </div>
                    <% }else{ %>
