                            <a class="btn btn-dark rounded-5" href="/subscribe/<%=elem._id%>">Subscribed</a>

                            <%}else{%>
                              <a class="btn btn-light rounded-5" href="/subscribe/<%=elem._id%>">Subscribe</a>
                              <% }%>

                        </div>

                      </div>
