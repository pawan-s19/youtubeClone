<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>

<body>
  <!-- <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#playlistModal" data-bs-whatever="@getbootstrap">Open modal for @getbootstrap</button> -->

  <div class="modal fade" id="playlistModal" tabindex="-1" aria-labelledby="playlistModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <a class="mx-3 fs-5 text-black bg-white " id="watchlater" style="text-decoration: none;"  >Add To WatchLater</a>
        <label class="col-form-label mx-3 fs-4">Created Playlists</label>
        <%if(user){%>
          <ul class="playlistShowWrapper">
            <%user.userPlaylist.forEach(function(elem){%>
            <a class="mx-3 fs-5 text-black bg-white" style="text-decoration: none;" data-bs-plname="<%=elem._id%>"  data-bs-prefix="/addToPlaylist/<%=elem._id%>/" >Add To <%=elem.playListName%></a>
            <%})%>
         </ul>
        <%}%>
        <div class="mx-3">
          <small class="userPlaylists"></small>
        </div>
        <div class="modal-body">
          <form method="post" class="playListForm">
            <div class="mb-3">
              <label for="recipient-name" class="col-form-label fs-4">PlayList Name:</label>
              <input type="text" class="plInp form-control" id="recipient-name" name="playListname"
                placeholder="Enter PlayList Name">
            </div>
            <button type="submit" class="plsSubmitBtn btn btn-primary">Create</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <script src="/javascripts/playlistModal.js"></script>
</body>

</html>