<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/home2.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <title>Document</title>
  </head>
  <body>
    <div>
        <%-include('modal') %>
        <%-include('signinModal') %>
        <%-include('navbar') %>
        <div class="menu-vid-parent d-flex flex-fill">
            <%-include('sideMenu') %>
            <%-include('bottomMenu') %>
            <%-include('videoUploadModal') %>
            <%-include('createChannelModal') %>
            <div class="right-section p-3">
                <div class="tags-ctn d-flex align-items-center gap-3">
                    <div class="explore tags-wrapper rounded-3"  data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions">
                        <a class="text-decoration-none text-light m-0 d-flex align-items-center justify-content-center" href="#">
                            <i class="ri-compass-3-line"></i>
                        </a>
                    </div>
                    <div class="tags-wrapper-selected tags-wrapper rounded-3">
                        <a class="text-decoration-none text-light m-0 d-flex align-items-center justify-content-center" href="#">
                            <small>All</small>
                        </a>
                    </div>
                    <div class="tags-wrapper rounded-3">
                        <a class="text-decoration-none text-light m-0 d-flex align-items-center justify-content-center" href="#">
                            <small>Music</small>
                        </a>
                    </div>
                    <div class="tags-wrapper rounded-3">
                        <a class="text-decoration-none text-light m-0 d-flex align-items-center justify-content-center" href="#">
                            <small>Mixes</small>
                        </a>
                    </div>
                    <div class="tags-wrapper rounded-3">
                        <a class="text-decoration-none text-light m-0 d-flex align-items-center justify-content-center" href="#">
                            <small>Ravindra Jain</small>
                        </a>
                    </div>
                    <div class="tags-wrapper rounded-3">
                        <a class="text-decoration-none text-light m-0 d-flex align-items-center justify-content-center" href="#">
                            <small>Live</small>
                        </a>
                    </div>
                    <div class="tags-wrapper rounded-3">
                        <a class="text-decoration-none text-light m-0 d-flex align-items-center justify-content-center" href="#">
                            <small>Bhajan Music</small>
                        </a>
                    </div>
                    <div class="tags-wrapper rounded-3">
                        <a class="text-decoration-none text-light m-0 d-flex align-items-center justify-content-center" href="#">
                            <small>Javascript</small>
                        </a>
                    </div>
                    <div class="tags-wrapper rounded-3">
                        <a class="text-decoration-none text-light m-0 d-flex align-items-center justify-content-center" href="#">
                            <small>Comedy</small>
                        </a>
                    </div>
                    <div class="tags-wrapper rounded-3">
                        <a class="text-decoration-none text-light m-0 d-flex align-items-center justify-content-center" href="#">
                            <small>Computer Science</small>
                        </a>
                    </div>
                    <div class="tags-wrapper rounded-3">
                        <a class="text-decoration-none text-light m-0 d-flex align-items-center justify-content-center" href="#">
                            <small>Wildlife</small>
                        </a>
                    </div>
                    <div class="tags-wrapper rounded-3">
                        <a class="text-decoration-none text-light m-0 d-flex align-items-center justify-content-center" href="#">
                            <small>Television</small>
                        </a>
                    </div>
                    <div class="tags-wrapper rounded-3">
                        <a class="text-decoration-none text-light m-0 d-flex align-items-center justify-content-center" href="#">
                            <small>Web Development</small>
                        </a>
                    </div>
                    <div class="tags-wrapper rounded-3">
                        <a class="text-decoration-none text-light m-0 d-flex align-items-center justify-content-center" href="#">
                            <small>Recently Uploaded</small>
                        </a>
                    </div>
                    <div class="tags-wrapper rounded-3">
                        <a class="text-decoration-none text-light m-0 d-flex align-items-center justify-content-center" href="#">
                            <small>New to you</small>
                        </a>
                    </div>
                    
                </div>
                <div class="all-videos-ctn mt-3">
                                      
                    <%videos.forEach(function(elem){%>
                        <div class="video-wrapper">
                            <div class="video-container">
                                <a class="linkTo text-light" href="/single/<%=elem._id%>">
                                    <video oncontextmenu="return false;" disablepictureinpicture muted controlsList="nofullscreen nodownload noremoteplayback noplaybackrate" src="/play/<%=elem.video_id%>" poster="<%=elem.thumbnail.secure_url%>"></video>
                                    <small style="pointer-events: none;" class="m-0 p-1 badge bg-dark">8:20</small>
                                </a>
                            </div>
                            <div class="iconTextWrapper mt-2 d-flex flex-nowrap align-items-start gap-3">
                                <a class="linkTo text-light" href="#">
                                    <div class="profileIconCtn">
                                        <img src="/Sample_Profile/pf1.jpg" alt="">
                                    </div>
                                </a>
                                <div class="videoTextCtn">
                                    <a class="linkTo text-light" href="#">
                                        <p class="m-0 fw-bold text-light mb-2">
                                            <%=elem.title%>
                                        </p>
                                    </a>
                                    <div class="text-secondary">
                                        <a class="linkTo text-secondary" href="#">
                                            <small class="m-0 channelName"><%=elem.userId?.channel.channelName%></small>
                                        </a>
                                    </div>
                                    <div class="text-secondary">
                                        <a class="linkTo text-secondary" href="#">
                                            <small class="listDot m-0 sm-channelName"><%=elem.userId?.channel.channelName%></small>
                                            <small class="listDot">
                                            <%if(elem.views.length == 0){%>
                                            No views
                                           <% }else{%>
                                             <%=elem.views.length%> Views
                                           <% }%>
                                           </small>
                                            <small class="listDot last"><%=moment(elem.createdAt).fromNow()%></small>
                                        </a>
                                    </div>
                                </div>
                                <div class="optionsMenu text-light">
                                    <i class="ri-more-2-line fw-semibold" data-bs-toggle="dropdown" aria-expanded="false"></i>
                                    <ul class="dropdown-menu">
                                        <li>
                                        <a class="dropdown-item d-flex align-items-center gap-2" href="/addToWatchLater/<%=elem._id%>">
                                            <i class="ri-time-line"></i>
                                            <p class="m-0">Save to Watch Later</p>
                                        </a>
                                        </li>
                                        <li>
                                        <a data-bs-toggle="modal" data-bs-target="#playlistModel" class="dropdown-item d-flex align-items-center gap-2" href="#">
                                            <i class="ri-play-list-add-line"></i>
                                            <p class="m-0">Save to Playlist</p>
                                        </a>
                                        </li>
                                        <li>
                                        <a class="dropdown-item d-flex align-items-center gap-2" href="#">
                                            <i class="ri-share-forward-line"></i>
                                            <p class="m-0">Share</p>
                                        </a>
                                        </li>
                                    </ul>
                                    <i class="ri-more-2-line text-light"></i>
                                </div>
                                <div>
                                    <h3 data-bs-toggle="modal" data-bs-target="#playlistModel" style="color: blue;">ATP</h3>
                                    <!-- Modal -->
                                        <!-- <div class="modal fade" id="playlistModel" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"> -->
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">select playlist</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">create playlist</h1> 
                                                    <form>
                                                        <div class="mb-3">
                                                        <label for="exampleInputEmail1" class="form-label">playlist Name</label>
                                                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                                                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                                                        </div>
                                                        <div class="mb-3">
                                                        <label for="exampleInputPassword1" class="form-label">Password</label>
                                                        <input type="password" class="form-control" id="exampleInputPassword1">
                                                        </div>
                                                        <div class="mb-3 form-check">
                                                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                                        <label class="form-check-label" for="exampleCheck1">Check me out</label>
                                                        </div>
                                                        <button type="submit" class="btn btn-primary">Submit</button>
                                                    </form>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    <button type="button" class="btn btn-primary">Save changes</button>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- </div> -->
                                </div>
                            </div>
                        </div> 
                    <%})%>                  
                                       
                </div>
            </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
    crossorigin="anonymous"></script>
    <script src="/javascripts/home2.js"></script>
  </body>
</html>
